{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/lib/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}/lib",
            "args": [
                "--runInBand",
                "--watchAll=false"
            ]
        }
    ]
}